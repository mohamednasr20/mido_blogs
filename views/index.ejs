<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

        <body>
            <%- include("./partials/nav.ejs") %>

                <div class="blogs content">
                    <h2>All Blogs</h2>

                    <% if(blogs.length> 0) { %>
                        <%blogs.forEach(blog=> {%>
                            <h1>
                                <%= blog.title%>
                            </h1>
                            <p>
                                <%= blog.snippet%>
                            </p>

                            <%})%>

                                <%} else { %>
                                    <p>there are no blogs to display..</p>
                                    <%}%>
                </div>
                <%- include('partials/footer.ejs')%>

        </body>

</html>
